<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- ... other theme attributes ... -->
    </style>

    <style name="CustomChipChoice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/TopHeaderBackground</item>
        <item name="android:textColor">@color/text_colour</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/TopHeaderBackground</item>
        <item name="android:textSize">14sp</item>
        <item name="chipMinHeight">36dp</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
        <item name="android:elevation">4dp</item>
        <item name="chipCornerRadius">16dp</item>
    </style>

    <!-- for circle containing pfp -->
    <style name="CircleShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources> 